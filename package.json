{
    "name": "vscode-phpunit",
    "description": "PHPUnit Test Explorer",
    "displayName": "PHPUnit Test Explorer",
    "author": "recca0120",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/recca0120/vscode-phpunit"
    },
    "publisher": "recca0120",
    "categories": [
        "Programming Languages",
        "Debuggers",
        "Other"
    ],
    "keywords": [
        "test",
        "testing",
        "test explorer",
        "phpunit",
        "language server protocol"
    ],
    "engines": {
        "vscode": "^1.33.0"
    },
    "extensionDependencies": [
        "hbenl.vscode-test-explorer"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PHPUnit configuration",
            "properties": {
                "phpunit.logpanel": {
                    "description": "write diagnotic logs to an output panel",
                    "type": "boolean",
                    "scope": "resource"
                },
                "phpunit.logfile": {
                    "description": "write diagnostic logs to the given file",
                    "type": "string",
                    "scope": "resource"
                },
                "phpunit.php": {
                    "type": "string",
                    "description": "Absolute path to php. Fallback to global php if it exists on the command line.",
                    "scope": "resource"
                },
                "phpunit.phpunit": {
                    "type": "string",
                    "description": "Path to phpunit. Can be the phpunit file or phpunit.phar.\n\nAutomatically finds it in common places:\n  - Composer vendor directory\n  - phpunit.phar in your project\n  - phpunit (or phpunit.bat for windows) globally on the command line",
                    "scope": "resource"
                },
                "phpunit.command": {
                    "type": "string",
                    "description": "Custom command to run. Ex: `docker exec -t container_name`.",
                    "scope": "resource"
                },
                "phpunit.args": {
                    "type": "array",
                    "default": [],
                    "description": "Any phpunit args (phpunit --help) E.g. --configuration ./phpunit.xml.dist",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run webpack",
        "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
        "webpack:dev": "npm run clean && webpack --mode development --config ./client/webpack.config.js && webpack --mode development --config ./server/webpack.config.js",
        "compile": "tsc -b",
        "compile:client": "tsc -b ./client/tsconfig.json",
        "compile:server": "tsc -b ./server/tsconfig.json",
        "watch": "tsc -b -w",
        "lint": "npm run lint:client && npm run lint:server",
        "lint:client": "eslint --config ./client/.eslintrc.json ./client/src/*.ts",
        "lint:server": "eslint --config ./server/.eslintrc.json ./server/src/*.ts",
        "clean": "rimraf client/out && rimraf server/out",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/jest": "^24.9.0",
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.1.8",
        "@typescript-eslint/parser": "^2.17.0",
        "eslint": "^6.8.0",
        "merge-options": "^2.0.0",
        "rimraf": "^3.0.0",
        "ts-loader": "^6.2.1",
        "tslint": "^5.20.1",
        "typescript": "^3.7.5",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    },
    "dependencies": {}
}
