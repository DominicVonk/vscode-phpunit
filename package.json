{
    "name": "vscode-phpunit",
    "displayName": "VSCode-PHPUnit",
    "description": "",
    "version": "0.2.9",
    "author": "Recca Tsai",
    "publisher": "recca0120",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "prettier": "prettier --tab-width 4",
        "prettier-write": "npm run prettier -- --parser typescript --no-semi --single-quote --trailing-comma es5 --write --print-width 120",
        "prettier-project": "npm run prettier-write -- {test,tests,src}/**/*.ts"
    },
    "license": "MIT",
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/scripts/preprocessor.js"
        },
        "testMatch": [
            "**/tests/*.(ts|tsx|js)"
        ]
    },
    "keywords": [
        "phpunit",
        "test",
        "unittest",
        "php"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/recca0120/vscode-phpunit"
    },
    "devDependencies": {
        "@types/faker": "^4.1.1",
        "@types/jest": "^20.0.8",
        "@types/node": "^6.0.88",
        "faker": "^4.1.0",
        "fs-extra": "^4.0.2",
        "husky": "^0.14.3",
        "jest": "^20.0.4",
        "lint-staged": "^4.2.1",
        "mocha": "^2.3.3",
        "prettier": "^1.7.0",
        "tslint": "^5.7.0",
        "tslint-config-prettier": "^1.5.0",
        "typescript": "^2.5.2",
        "vscode": "^1.1.5"
    },
    "dependencies": {
        "@types/xml2js": "^0.4.0",
        "xml2js": "^0.4.19"
    }
}
