{
    "name": "vscode-phpunit",
    "displayName": "VSCode-PHPUnit",
    "description": "",
    "version": "0.0.10",
    "author": "Recca Tsai",
    "publisher": "recca0120",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "prettier": "prettier --tab-width 4",
        "prettier-write": "npm run prettier -- --parser typescript --no-semi --single-quote --trailing-comma es5 --write --print-width 120",
        "prettier-project": "npm run prettier-write -- '?(__mocks__|src|tests)/**/*.ts'"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/recca0120/vscode-phpunit"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "fs-extra": "^4.0.1",
        "husky": "^0.14.3",
        "lint-staged": "^4.0.3",
        "mocha": "^2.3.3",
        "prettier": "^1.5.3",
        "tslint": "^5.6.0",
        "tslint-config-prettier": "^1.3.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "@types/xml2js": "^0.4.0",
        "xml2js": "^0.4.18"
    }
}
