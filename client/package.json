{
	"name": "vscode-phpunit",
	"displayName": "VSCode PHPUnit",
	"description": "phpunit lsp client",
	"author": "recca0120",
	"license": "MIT",
	"icon": "images/icon.png",
	"version": "0.7.13",
	"publisher": "recca0120",
	"repository": {
		"type": "git",
		"url": "https://github.com/recca0120/vscode-phpunit/tree/master/client"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Languages",
		"Other"
	],
	"keywords": [
		"phpunit",
		"phpunit-lsp",
		"test",
		"php",
		"language server protocol"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"preview": true,
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "phpunit configuration",
			"properties": {
				"phpunit.execPath": {
					"type": "string",
					"default": "",
					"description": "Path to phpunit executable (if empty it tries to use composer installation)."
				},
				"phpunit.args": {
					"type": "array",
					"default": [],
					"description": "Any phpunit args (phpunit --help)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode-languageclient": "^3.5.0"
	},
	"devDependencies": {
		"@types/node": "^7.0.43",
		"vscode": "^1.1.6"
	}
}
